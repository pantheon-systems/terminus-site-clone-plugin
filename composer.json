{
    "name": "pantheon-systems/terminus-site-clone-plugin",
    "description": "Site Clone - A Terminus plugin that adds command(s) to facilitate cloning sites on Pantheon.",
    "license": "MIT",
    "type": "terminus-plugin",
    "autoload": {
        "psr-4": { "Pantheon\\TerminusSiteClone\\": "src" }
    },
    "extra": {
        "terminus": {
            "compatible-version": "^2||^3||^4"
        }
    },
    "scripts": {
        "check-deprecations": "find src -name '*.php' -print0 | xargs -0 -n1 php -l 2>&1 >/dev/null | tee /tmp/deprecations ; [ ! -s /tmp/deprecations ]"
    }
}
